<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.oneconnectgroup.paygatedemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AdminTheme">
        <activity
            android:name=".PayGateActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AdminTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PaymentPageActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".PayGateActivity"
            android:theme="@style/AdminTheme"></activity>
    </application>

</manifest>